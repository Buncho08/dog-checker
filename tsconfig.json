{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "preserve",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"sourceMap": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"esModuleInterop": true
	},
	"include": [
		"app/**/*",
		"lib/**/*",
		"next-env.d.ts",
		"tests/**/*",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
